<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="105dp"
    android:orientation="horizontal"
    android:showDividers="none"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:elevation="5dp"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="id"
            android:id="@+id/id"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="gravity"
            android:gravity="center"
            android:elevation="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Occupation"
            android:id="@+id/itemOccupation"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/itemName"
            android:layout_toEndOf="@+id/itemName"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Education"
            android:id="@+id/itemEducation"
            android:layout_below="@+id/itemOccupation"
            android:layout_alignLeft="@+id/itemOccupation"
            android:layout_alignStart="@+id/itemOccupation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="age"
            android:id="@+id/itemAge"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Message"
            android:id="@+id/itemMessage"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/id"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/itemName"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/id"
            android:layout_toEndOf="@+id/id" />
    </RelativeLayout>
</LinearLayout>
