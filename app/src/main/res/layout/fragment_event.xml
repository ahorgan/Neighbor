<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="horizontal"
    android:weightSum="1"
    android:elevation="5dp"
    android:contextClickable="true"
    android:longClickable="true">

    <RelativeLayout
        android:layout_width="105dp"
        android:layout_height="match_parent"
        android:elevation="4dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Owner"
            android:id="@+id/eventOwnerTv"
            android:elevation="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broadcast to Community"
            android:id="@+id/broadcastCheckBox"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:gravity="center"
            android:elevation="4dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Event Name"
            android:id="@+id/eventNameTv"
            android:layout_weight="0.05"
            android:elevation="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="StartDateTime"
            android:id="@+id/eventStartDateTimeTv"
            android:gravity="right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="EndDateTime"
            android:id="@+id/eventEndDateTimeTv"
            android:gravity="right"
            android:elevation="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location"
            android:id="@+id/eventLocationTv"
            android:layout_weight="0.05"
            android:elevation="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Details"
            android:id="@+id/eventDetailsTv"
            android:gravity="right" />
    </LinearLayout>

</LinearLayout>
